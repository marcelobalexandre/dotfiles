# Use Ctrl as Cmd

ctrl - a : skhd -k "cmd - a"
ctrl - c [
  "Alacritty" ~
  "Ghostty" ~
  *           : skhd -k "cmd - c"
]
ctrl - f [
  "Alacritty" ~
  "Ghostty" ~
  *           : skhd -k "cmd - f"
]
ctrl - k : skhd -k "cmd - k"
ctrl - l : skhd -k "cmd - l"
ctrl - r [
  "Alacritty" ~
  "Ghostty" ~
  *           : skhd -k "cmd - r"
]
ctrl - t [
  "Alacritty" ~
  "Ghostty" ~
  *           : skhd -k "cmd - t"
]
ctrl - v [
  "Alacritty" ~
  "Ghostty" ~
  *           : skhd -k "cmd - v" 
]
ctrl - x : skhd -k "cmd - x"
ctrl - z : skhd -k "cmd - z"
shift + ctrl - p : skhd -k "shift + cmd - p"
shift + ctrl - t : skhd -k "shift + cmd - t"
