alias vim='nvim'

alias pacman.clean='sudo pacman -Rsn $(pacman -Qdtq)'

alias zsh.edit='vim ~/.zshrc'
alias zsh.reload='source ~/.zshrc'

alias hosts.edit='sudo vim /etc/hosts'

alias cd.home='cd ~/'
alias cd.src='cd ~/src'
alias cd.dotfiles='cd ~/src/dotfiles'
alias cd.sb='cd ~/src/personal/second-brain'
alias cd.aoc='cd ~/src/personal/advent-of-code'

alias git.undo='git reset HEAD~'
